{
  "name": "SimpleTab",
  "description": "A Extension for Google Chrome.",
  "version": "0.0.1",
  "manifest_version": 3,
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background/background.js",
    "persisten": true,
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "pages/tab/tab.html"
  },
  "action": {
    "default_title": "SimpleTab",
    "default_icon": "icon/logo_48.png",
    "default_popup": "pages/popup/popup.html"
  },
  "options_ui": {
    "page": "pages/options/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "notifications", "activeTab", "history"],
  "icons": {
    "16": "icon/logo_16.png",
    "48": "icon/logo_48.png",
    "128": "icon/logo_128.png"
  }
}
